RewriteEngine On

# Redirect /berita/slug to /berita/index.html (clean URLs for berita)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^berita/(.+)$ berita/index.html [L,QSA]

